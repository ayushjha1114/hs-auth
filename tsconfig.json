{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "skipDefaultLibCheck": false,
    "baseUrl": "./lib",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"]
}
